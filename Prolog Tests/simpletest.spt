module simpletest

language Prolog

test mixed local and free variables [[
	a(F1, F1, F2) :- b(F1, F2).
	b(1,1).
	
	?- a(G1, G2, G2).
]] run evaluate-full to Result("true", _) // true

test bad mixed local and free variables [[
	a(F1, F1, F2) :- b(F1, F2).
	b(1,2).
	
	?- a(G1, G2, G2).
]] run evaluate-full to Result("false", _) // false

test very simple [[
	cat(tom) :- true.
	
	?- cat(tom).
]] run evaluate-full to Result("true", [])